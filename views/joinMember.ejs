<!DOCTYPE html>

<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="../css/loginCss.css">
  <script defer src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script defer src="../service/loginService.js"></script>
</head>

<body>

  <main id="main-holder">
    <h1 id="login-header">Login</h1>
    
    <div id="login-error-msg-holder">
      <p id="login-error-msg">Invalid username <span id="error-msg-second-line">and/or password</span></p>
    </div>
    
    <form action="/users/" method="get" target="_blank">
      <label for="name">이름:</label>
      <input type="text" id="name" name="name"><br><br>
      <label for="userid">아이디:</label>
      <input type="text" id="userid" name="userid"><br><br>
      <label for="password">비밀번호:</label>
      <input type="password" id="password" name="password"><br><br>
      <label for="email">이메일:</label>
      <input type="text" id="email" name="email"><br><br>
      <label for="phone">핸드폰번호:</label>
      <input type="text" id="phone" name="phone"><br><br>
      <button type="submit">Submit</button>
      <button type="submit" formmethod="post">Submit using POST</button>
    </form>
  
  </main>

  <script>
    $(document).ready(function() {
      // GET 요청 보내기
      $('#submitGet').click(function() {
        $.get('/auths/login', $('#login-form').serialize(), function(response) {
          console.log(' $(document).ready(function() {111111111111');
          // GET 요청에 대한 응답 처리
          // response를 사용하여 필요한 작업 수행
        });
      });

      // POST 요청 보내기
      $('#submitPost').click(function() {
        $.post('/auths/login', $('#login-form').serialize(), function(response) {
          console.log(' $(document).ready(function() {2222222222222');
          // POST 요청에 대한 응답 처리
          // response를 사용하여 필요한 작업 수행
        });
      });
    });
  </script>
</body>

</html>
