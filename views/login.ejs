<!DOCTYPE html>

<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="../css/loginCss.css">
  <script defer src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script defer src="../service/loginService.js"></script>
</head>

<body>

  <main id="main-holder">
    <h1 id="login-header">Login</h1>
    
    <div id="login-error-msg-holder">
      <p id="login-error-msg">Invalid username <span id="error-msg-second-line">and/or password</span></p>
    </div>
    
    
    <form id="login-form" action="/auths/login" method="get" target="_blank">
      <label for="userid">First name:</label>   
      <input type="text" name="userid" id="userid" class="login-form-field" placeholder="Username">
      <label for="password">Last name:</label>     
      <input type="password" name="password" id="password" class="login-form-field" placeholder="Password">
      <button type="button" id="submitGet">Submit</button>
      <button type="button" id="submitPost">Submit using POST</button>
    </form>
  
  </main>

  <script>
    $(document).ready(function() {
      // GET 요청 보내기
      $('#submitGet').click(function() {
        $.get('/auths/login', $('#login-form').serialize(), function(response) {
          console.log(' $(document).ready(function() {111111111111');
          // GET 요청에 대한 응답 처리
          // response를 사용하여 필요한 작업 수행
        });
      });

      // POST 요청 보내기
      $('#submitPost').click(function() {
        $.post('/auths/login', $('#login-form').serialize(), function(response) {
          console.log(' $(document).ready(function() {2222222222222');
          // POST 요청에 대한 응답 처리
          // response를 사용하여 필요한 작업 수행
        });
      });
    });
  </script>
</body>

</html>
